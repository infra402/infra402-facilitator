HOST=0.0.0.0
PORT=8080

RPC_URL_BASE_SEPOLIA=https://sepolia.base.org
RPC_URL_BASE=https://mainnet.base.org
SIGNER_TYPE=private-key
EVM_PRIVATE_KEY=0xdeadbeef

# Honeycomb OpenTelemetry
#OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io:443
#OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_api_key,x-honeycomb-dataset=infra402-facilitator
#OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# API_KEYS (optional)
#   Comma-separated list of valid API keys for authentication
#   If set, API key authentication is REQUIRED for /verify and /settle endpoints
#   Format: API_KEYS=key1,key2,key3
#   Header format: Authorization: Bearer <key>
#
# ADMIN_API_KEY (optional)
#   API key for admin endpoints
#   If set, admin authentication is REQUIRED for admin endpoints
#   Header format: X-Admin-Key: <key>
#
# CONFIG_FILE (optional)
#   Path to this configuration file
#   Default: ./config.toml

# HOOK_{HOOK_NAME}_{NETWORK}_CONTRACT (optional)
#   Contract addresses for per-network hooks
#   Example: HOOK_TOKEN_MINT_BASE_SEPOLIA_CONTRACT=0xabcd...
#   Used in hooks.toml via: contract = "${HOOK_TOKEN_MINT_BASE_SEPOLIA_CONTRACT}"
#   Naming convention:
#     - HOOK_: prefix
#     - {HOOK_NAME}: hook name from hooks.toml (uppercase with underscores)
#     - _{NETWORK}: network name from hooks.toml (uppercase with underscores, hyphens become underscores)
#     - _CONTRACT: suffix
#   Examples:
#     HOOK_TOKEN_MINT_BASE_SEPOLIA_CONTRACT=0x1234...
#     HOOK_NOTIFY_BASE_CONTRACT=0x5678...
#     HOOK_REWARDS_BSC_TESTNET_CONTRACT=0x9abc...
