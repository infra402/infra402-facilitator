HOST=0.0.0.0
PORT=8080

RPC_URL_BASE_SEPOLIA=https://sepolia.base.org
RPC_URL_BASE=https://mainnet.base.org
SIGNER_TYPE=private-key
EVM_PRIVATE_KEY=0xdeadbeef

# Honeycomb OpenTelemetry
#OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io:443
#OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_api_key,x-honeycomb-dataset=infra402-facilitator
#OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# API_KEYS (optional)
#   Comma-separated list of valid API keys for authentication
#   If set, API key authentication is REQUIRED for /verify and /settle endpoints
#   Format: API_KEYS=key1,key2,key3
#   Header format: Authorization: Bearer <key>
#
# ADMIN_API_KEY (optional)
#   API key for admin endpoints
#   If set, admin authentication is REQUIRED for admin endpoints
#   Header format: X-Admin-Key: <key>
#
# CONFIG_FILE (optional)
#   Path to this configuration file
#   Default: ./config.toml

# HOOK_{HOOK_NAME}_{NETWORK}_CONTRACT (optional)
#   Contract addresses for per-network hooks
#   Example: HOOK_TOKEN_MINT_CALLBACK_BASE_SEPOLIA_CONTRACT=0xabcd...
#   Used in hooks.toml via: contract = "${HOOK_TOKEN_MINT_CALLBACK_BASE_SEPOLIA_CONTRACT}"
#   Naming convention:
#     - HOOK_: prefix
#     - {HOOK_NAME}: hook name from hooks.toml (uppercase with underscores)
#     - _{NETWORK}: network name from hooks.toml (uppercase with underscores, hyphens become underscores)
#     - _CONTRACT: suffix
#   Examples:
#     HOOK_TOKEN_MINT_CALLBACK_BASE_SEPOLIA_CONTRACT=0x1234...
#     HOOK_NOTIFY_BASE_CONTRACT=0x5678...
#     HOOK_REWARDS_BSC_TESTNET_CONTRACT=0x9abc...
#
# Recipient/Mapping Addresses (optional)
#   Recipient addresses used in hooks.toml mappings
#   Example: TOKEN_MINT_RECIPIENT_BASE_SEPOLIA=0x742d35Cc...
#   Used in hooks.toml via: "${TOKEN_MINT_RECIPIENT_BASE_SEPOLIA}" = ["hook_name"]
#   Naming convention (flexible, choose descriptive names):
#     - {DESCRIPTIVE_NAME}_RECIPIENT_{NETWORK}
#     - or {FEATURE}_{NETWORK}_RECIPIENT
#   Examples:
#     TOKEN_MINT_RECIPIENT_BASE_SEPOLIA=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb
#     REWARDS_RECIPIENT_BASE=0x5678...
#     NOTIFY_RECIPIENT_BSC_TESTNET=0x9abc...
#
# Custom/Additional Token Addresses (optional)
#   Add custom tokens beyond the production tokens hardcoded in tokens.toml
#   Production tokens (USDC, XBNB) are defined in tokens.toml
#
#   IMPORTANT: Custom tokens must use NEW addresses not in production.
#   If a custom token uses the same address as a production token,
#   the server will fail to start with a configuration error.
#
#   Used in tokens.toml via:
#     [tokens.networks.base-sepolia.custom]
#     test_usdc = "${TEST_USDC_BASE_SEPOLIA}"
#     custom_token = "${CUSTOM_TOKEN_BASE_SEPOLIA}"
#
#   Naming convention:
#     - TEST_{TOKEN}_{NETWORK} for test versions of known tokens
#     - CUSTOM_TOKEN_{NETWORK} for custom ERC-3009 tokens
#
#   Examples:
#     TEST_USDC_BASE_SEPOLIA=0xYourTestUSDCAddress
#     CUSTOM_TOKEN_BASE_SEPOLIA=0xYourCustomERC3009Token
#     TEST_XBNB_BSC_TESTNET=0xYourTestXBNBAddress
